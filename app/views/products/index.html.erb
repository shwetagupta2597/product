<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Browsing products
        </h1>
      </div>
    </div>
  </section>
  <% end %>
<br>

<div class="product-index-grid pt4">
  <% @products.each do |product| %>
<nbsp><hr />
    <div class="product border-light">
      <div class="product-thumb">
      <%= link_to image_tag(product.image_url(:thumb)), product %>
      <% if product.color? %>
      <div class="color">
        <span class="tag is-dark"><%= product.color %></span>
      </div>
    <% end %>
      </div>

<br>
    <div class="pa3">

      <h3 class="fw7 f4 title"><%= link_to product.title, product %></h3>

      <p class="has-text-gray fg pt1"><%= link_to product.description, product %></p>

      <p class="f3 fw6 has-text-right pt2 price"><b><%= number_to_currency(product.price) %><b></p>

      <%-# <%= link_to 'Edit', edit_product_path(product), class: "button is-small" %>
      <%-# <%= link_to 'Delete', product, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
 </div>
  </div>
  <% end %>
</div>

